<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h1>User info</h1>
        <%= image_tag @user.get_profile_image, size:"100x100" %>
      <table class="table">
        <tbody>
          <tr>
            <th>name</th><td><%= @user.name %></td>
          </tr>
          <tr>
            <th>introduction</th><td><%= @user.introduction %></td>
          </tr>
        </tbody>
      </table>
      <div class="row">
        <a class="btn btn-outline-secondary btn-block" href="edit_user_path(@user.id)">
          <i class="fas fa-user-cog"></i>
        </a>
      </div>

      <h1>New Book</h1>
        <%= form_with model: @book do |f| %>
      <p>Title</p>
        <%= f.text_field :title %>
      <p>Opinion</p>
        <%= f.text_area :body %>
      <div>
        <%= f.submit 'Create Book' %>
      </div>
      <% end %>
    </div>
    
    <div class="col-md-8 offset-md-1">
      <h1>Users</h1>
        <% @users.each do |user| %>
        <table class="table">
          <thead>
            <tr>
              <th>image</th>
              <th>name</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <th><%= image_tag user.get_profile_image, size:"80x80" %></th>
              <th><%= user.name %></th>
              <th><%= link_to "Show", user_path(user.id) %></th>
            </tr>
          </tbody>
        </table>
        <% end %>
      </div>
    </div>
  </div>
</div>