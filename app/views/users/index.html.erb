<div class="container px-5 px-sm-0">
  <div class="row">
    
    <%= render 'info', user: @user, book: @book %>
    
    <div class="col-md-8 offset-md-1">
      <h1>Users</h1>
        
        <table class="table">
          <thead>
            <tr>
              <th>image</th>
              <th>name</th>
              <th></th>
            </tr>
          </thead>
          <% @users.each do |user| %>
          <tbody>
            <tr>
              <th><%= image_tag user.get_profile_image, size:"80x80" %></th>
              <th><%= user.name %></th>
              <th><%= link_to "Show", user_path(user.id) %></th>
            </tr>
          </tbody>
          <% end %>
        </table>
      </div>
    </div>
  </div>
</div>