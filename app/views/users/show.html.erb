<p class="notice"><%= notice %></p>
<!--部分テンプレートにする-->
<div class="container px-5 px-sm-0">
  <div class="row">
    
    <%= render 'info', user: @user, book: @book %>
    
    <div class="col-md-8 offset-md-1">
      <h1>Books</h1>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <% @books.each do |book| %>
        <tbody>
          <tr>
            <th><%= link_to user_path(@user) do %> <%= image_tag @user.get_profile_image, size:"80x80" %> <% end %></th>
            <th><%= link_to book_path(book.id) do %> <%= book.title %><% end %></th>
            <th><%= book.body %></th>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>