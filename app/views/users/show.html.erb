<p class="notice"><%= notice %></p>
<!--部分テンプレートにする-->
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h1>User info</h1>
        <%= image_tag @user.get_profile_image, size:"100x100" %>
      <table class="table">
        <tbody>
          <tr>
            <th>name</th><td><%= @user.name %></td>
          </tr>
          <tr>
            <th>introduction</th><td><%= @user.introduction %></td>
          </tr>
        </tbody>
      </table>
      <div class="row">
        <%= link_to edit_user_path(@user), class:"btn btn-outline-secondary btn-block" do %><i class="fas fa-user-cog"></i><% end %>
      </div>

      <h1>New Book</h1>
        <%= form_with model: @book do |f| %>
      <p>Title</p>
        <%= f.text_field :title %>
      <p>Opinion</p>
        <%= f.text_area :body %>
      <div>
        <%= f.submit 'Create Book', class:"btn btn-success"%>
      </div>
      <% end %>
    </div>
    
    <div class="col-md-8 offset-md-1">
      <h1>Books</h1>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <% @books.each do |book| %>
        <tbody>
          <tr>
            <th><%= link_to user_path(@user) do %> <%= image_tag @user.get_profile_image, size:"80x80" %> <% end %></th>
            <th><%= link_to book_path(book.id) do %> <%= book.title %><% end %></th>
            <th><%= book.body %></th>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>