<h1>New Book</h1>
<%= form_with model: @book do |f| %>
  <p>Title</p>
    <%= f.text_field :title %>
  <p>Opinion</p>
    <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
 <% end %>
 
<h1>Books</h1>
<% @books.each do |book| %>
<p>Title</p>
  <%= book.title %>
<p>Opinion</p>
  <%= book.body %>
<% end %>