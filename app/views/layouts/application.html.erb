<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <a class= "navbar-brand" href= "/" >Bookers</a>
          <button class="navbar-toggler" type="button" data-toggler="collapse" data-target="#navbarNavDoropdown" aria-controls="navbarNavDoropdown" aria-expanded="fales" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>  
          </button>
          
          <div class="collapse navbar-collapse" id="navbarNavDoropdown">
            <ul class="navbar-nav navbar-brand ml-auto">
            <% if user_signed_in? %>
            <li class="nav-link">
              <%= link_to user_path(current_user.id), class:"text-light" do %>
              <i class="fas fa-home", style="color: #ffffff"></i>
              <%= "Home" %><% end %>
            </li>
            <li class="nav-link">
              <%= link_to users_path, class:"text-light" do %>
              <i class="fas fa-users"></i>
              <%= "Users" %><% end %>
            </li>
            <li class="nav-link">
              <%= link_to books_path, class:"text-light" do %>
              <i class="fas fa-book-open"></i>
              <%= "Books" %><% end %>
            </li>
            <li class="nav-link">
              <%= link_to destroy_user_session_path,method: :delete, class:"text-light" do %>
              <i class="fas fa-sign-out-alt"></i>
              <%= "Log Out" %><% end %>
             </li>
            <% else %>
            <li class="nav-link">
              <%= link_to root_path, class:"text-light" do %>
              <i class="fas fa-home", style="color: #ffffff"></i>
              <%= "Home" %><% end %>
            </li>
            <li class="nav-link">
              <%= link_to homes_path, class:"text-light" do %>
              <i class="fas fa-link"></i>
              <%= "About" %><% end %>
            </li>
            <li class="nav-link">
              <%= link_to new_user_registration_path, class:"text-light" do %>
              <i class="fas fa-user-plus"></i>
              <%= "Sign Up" %><% end %>
            </li>
            <li class="nav-link">
              <%= link_to new_user_session_path, class:"text-light" do %>
              <i class="fas fa-sign-in-alt"></i>
              <%= "Log In" %><% end %>
            </li>
            <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    
    
    <%= yield %>
    
    <footer>
      <div class="row">
        <div class="mx-auto">
          <p>CopyRight Infratop.inc</p>
        </div>
      </div>
    </footer>
  </body>
  
</html>
