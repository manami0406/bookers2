<%= flash[:notice] %>

<div class="container px-5 px-sm-0">
  <div class="row">
    
    <%= render 'users/info', user: @user, book: @book %>
    
    <div class="col-md-8 offset-md-1">
      <h1>Book detail</h1>
      <table class="table">
        <tbody>
          <tr>
            <td>
              <%= link_to user_path(@user.id) do %> <%= image_tag @book.user.get_profile_image, size:"100x100" %> <% end %></br>
              <%= link_to user_path(@user.id) do %> <%= @user.name %> <% end %>
            </td>
            <td>
              <%= link_to book_path(@book) do %> <%= @book.title %> <% end %>
            </td>
            <td>
              <%= @book.body %>
            </td>
            <td>
              <a classs="btn btn-sm btn-success">
                <% if @book.user == current_user %>
                  <%= link_to edit_book_path(@book), class:"btn btn-sm btn-success" do %><%= "Edit" %><% end %>
                <% end %>
              </a>
            </td>
            <td>
              <% if @book.user == current_user %>
                <%= link_to book_path(@book), method: :delete,"data-confirm" => "本当に消しますか？", class:"btn btn-sm btn-danger" do %><% "Destroy" %><% end %>
              <% end %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
