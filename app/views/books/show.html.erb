<%= flash[:notice] %>

<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h1>User info</h1>
        <%= image_tag @user.get_profile_image, size:"100x100" %>
      <table class="table">
        <tbody>
          <tr>
            <th>name</th><td><%= @user.name %></td>
          </tr>
          <tr>
            <th>introduction</th><td><%= @user.introduction %></td>
          </tr>
        </tbody>
      </table>
      <div class="row">
        <a class="btn btn-outline-secondary btn-block" href="edit_user_path(@user.id)">
          <i class="fas fa-user-cog"></i>
        </a>
      </div>

      <h1>New Book</h1>
        <%= form_with model: @book do |f| %>
      <p>Title</p>
        <%= f.text_field :title %>
      <p>Opinion</p>
        <%= f.text_area :body %>
      <div>
        <%= f.submit 'Create Book' %>
      </div>
      <% end %>
    </div>
    
    <div class="col-md-8 offset-md-1">
      <h1>Book detail</h1>
      <table class="table">
        <tbody>
          <tr>
            <td>
              <%= link_to user_path(@user.id) do %> <%= image_tag @book.user.get_profile_image, size:"100x100" %> <% end %></br>
              <%= link_to user_path(@user.id) do %> <%= @user.name %> <% end %>
            </td>
            <td>
              <%= link_to book_path(@book) do %> <%= @book.title %> <% end %>
            </td>
            <td>
              <%= @book.body %>
            </td>
            <td>
              <a classs="btn btn-sm btn-success">
                <% if @book.user == current_user %>
                  <%= link_to "Edit", edit_book_path(@book) %>
                <% end %>
              </a>
            </td>
            <td>
              <% if @book.user == current_user %>
                <%= link_to "Destroy", book_path(@book), method: :delete,"data-confirm" => "本当に消しますか？" %>
              <% end %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
