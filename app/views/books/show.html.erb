<h1>User info</h1>
<%= image_tag @user.get_profile_image, size:"100x100" %>
<table class="table">
  <tbody>
      <tr>
          <th>name</th><td><%= @user.name %></td>
      </tr>
      <tr>
          <th>introduction</th><td><%= @user.introduction %></td>
      </tr>
  </tbody>
</table>
<h5><%= link_to "setting", edit_user_path %></h5>

<h1>New Book</h1>
<%= form_with model: @book do |f| %>
  <p>Title</p>
    <%= f.text_field :title %>
  <p>Opinion</p>
    <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
 <% end %>
 
 
<h1>Book detail</h1>

<%= @user.name %>
<%= @book.title %>
<%= @book.body %>
<%= link_to "Edit", edit_book_path %>
<% if @book.user == current_user %>
  <%= link_to "Destroy", book_path(@book), method: :delete %>
<% end %>